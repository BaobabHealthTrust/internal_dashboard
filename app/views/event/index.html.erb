<link href="/stylesheets/calendar.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" language="javascript" src="/javascripts/calendar.js"></script>

    <!-- Calender Script  -->

    <table id="calenderTable">
       <tbody id="calenderTableHead">
         <tr>
           <td colspan="4" align="center">
	     <select onChange="showCalenderBody(
                   createCalender(document.getElementById('selectYear').value,
	           this.selectedIndex, false));"
                   id="selectMonth" style="font-size:1.2em">
	              <option value="0">Jan</option>
	              <option value="1">Feb</option>
	              <option value="2">Mar</option>
	              <option value="3">Apr</option>
	              <option value="4">May</option>
	              <option value="5">Jun</option>
	              <option value="6">Jul</option>
	              <option value="7">Aug</option>
	              <option value="8">Sep</option>
	              <option value="9">Oct</option>
	              <option value="10">Nov</option>
	              <option value="11">Dec</option>
	          </select>
            </td>
            <td colspan="2" align="center">
	    <select onChange="showCalenderBody(createCalender(this.value,
	      document.getElementById('selectMonth').selectedIndex, false));"
              id="selectYear" style="font-size:1.2em">
	    </select>
			</td>
           <td align="center">
	    <a href="#" onClick="closeCalender();">
              <font color="#fff" size="+1">X</font>
            </a>
	   </td>
	</tr>
       </tbody>
       <tbody id="calenderTableDays">
         <tr style="">
           <td class="header-cell">Sun</td><td class="header-cell">Mon</td><td class="header-cell">Tue</td><td class="header-cell">Wed</td>
           <td class="header-cell">Thu</td><td class="header-cell">Fri</td><td class="header-cell">Sat</td>
         </tr>
       </tbody>
       <tbody id="calender"></tbody>
    </table>

<!-- End Calender Script  -->

<form action="/event/create" method="post" id="frmEvent" >
  <center>
  <fieldset style="padding:15px; border:1px solid #dd3; -moz-border-radius:20px; width:600px;">
    <legend style="font-size:2.5em; margin:10px; margin-right:20px; padding:15px;
            border:1px solid #dd3; -moz-border-radius:20px; color:#99f;" align="right">Add Event</legend>

    <table cellpadding="10">
      <tr>
        <td valign="top" style="color:#76684e;">
          Author:
        </td>
        <td valign="top">
          <input type="text" id="editAuthor" name="name" style="width:400px; border:1px solid #dd3; padding:5px;" />
        </td>
      </tr>
      <tr>
        <td valign="top" style="color:#76684e;">
          Password:
        </td>
        <td valign="top">
          <input type="password" id="editPassword" name="password" style="width:400px; border:1px solid #dd3; padding:5px;" />
        </td>
      </tr>
      <tr>
        <td valign="top" style="color:#76684e;">
          Event Date:
        </td>
        <td valign="top">
          <input type="text" id="editEventDate" name="event_date" style="width:400px;
                 border:1px solid #dd3; padding:5px; text-align:center;"
                 onClick="var yr = new Date(); setYears(yr.getFullYear() - 30, yr.getFullYear() + 10);
                                     showCalender(this, 'event_date');" class="input-date" />
        </td>
      </tr>
      <tr>
        <td valign="top" style="color:#76684e;">
          Event Description:
        </td>
        <td valign="top">
          <textarea id="editDesc" name="description" style="width:400px; height:120px;
                    border:1px solid #dd3; padding:5px;"></textarea>
        </td>
      </tr>
      <tr>
        <td>
          &nbsp;
        </td>
        <td>
          <input type="submit" value="Submit" style="font-size:1.5em; height:50px;
                 width:40%; float:left; background-color:#99f; color:#fff" />
          <input type="button" value="Cancel" style="font-size:1.5em; height:50px;
                 width:40%; float:right; background-color:#99f; color:#fff" onclick="window.location = '/'" />
        </td>
      </tr>
    </table>

  </fieldset>
  </center>
</form>